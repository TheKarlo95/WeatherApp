<?xml version="1.0" encoding="utf-8"?>
<manifest package="hr.karlovrbic.weatherapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CurrentWeatherActivity"
            android:label="@string/title_activity_forecast"
            android:parentActivityName=".activities.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hr.karlovrbic.weatherapp.activities.SearchActivity"/>
        </activity>
        <activity
            android:name=".activities.ForecastActivity"
            android:label="@string/title_activity_forecast"
            android:parentActivityName=".activities.CurrentWeatherActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hr.karlovrbic.weatherapp.activities.CurrentWeatherActivity"/>
        </activity>
    </application>

</manifest>